{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Debug Firewall (Remote)",
        "type": "debugpy",
        "request": "attach",
        "connect": {
          "host": "localhost",
          "port": 5678
        },
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}/firewall",
            "remoteRoot": "/app"
          }
        ],
        "justMyCode": false,
        "python": "${workspaceFolder}/firewall"
      }
    ]
  }